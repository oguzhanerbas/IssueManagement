@using Microsoft.AspNetCore.Identity;
@{
    // ISSUE ADD
    DateTime currentTime = DateTime.Now;
    var user = ViewBag.user;
    List<ProjectModel> projects = ViewBag.projects;
    ICollection<IdentityUser> users = ViewBag.users;
}
@model IssueModel

<div class="container">
    <div class="row">
        <div class="col-md-6">
            <h2>Update Issue</h2>
            <form method="post" action="/Issue/Update">
                <input type="hidden" class="form-control" id="id" name="Id" value="@Model.Id">
                <div class="form-group">
                    <label for="name">Name:</label>
                    <input type="text" class="form-control" id="name" name="Name" value="@Model.Name">
                </div>
                <div class="form-group">
                    <label for="author">Author:</label>
                    <input type="text" class="form-control" id="author" name="Author" value="@user" readonly>
                </div>
                <div class="form-group">
                    <label for="project">Project:</label>
                    <select class="form-control" id="project" name="ProjectModelId">
                        <option value="@Model.ProjectModel.Id">@Model.ProjectModel.Name</option>
                        @foreach (var project in projects)
                        {
                            <option value="@project.Id">@project.Name</option>
                        }
                    </select>
                </div>
                <div class="form-group">
                    <label for="assignedTo">Assigned to:</label>
                    <select class="form-control" id="assign" name="Assign">
                        <option value="">@Model.Assign</option>
                        @foreach (var item in users)
                        {
                            <option value="@item.UserName">@item.UserName</option>
                        }
                    </select>
                </div>

@*                <div class="form-group">
                    <label for="author">Author:</label>
                    <input type="text" class="form-control" id="description" name="Description" value="@Model.Description">
                </div>*@


                <input type="hidden" class="form-control" id="time" name="Time" value="@currentTime">

                <button type="submit" class="btn btn-primary mt-3">Update</button>
            </form>
        </div>
    </div>
</div>
